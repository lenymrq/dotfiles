general {
        colors = true
        interval = 5
}

order += backlight
order += volume_status
order += bluetooth
order += sysdata
order += battery_level
order += clock

backlight {
        button_up = 0
        button_down = 0
        format = "BRI: {level}%"
}

volume_status {
        format = "VOL: {percentage}%"
        format_muted = "MUT: {percentage}%"
}

bluetooth {
        format_device_separator = ", "
        format_adapter_separator = ", "
}

sysdata {
        format = "[\?color=cpu_used_percent CPU: {cpu_used_percent}%], [\?color=mem_used_percent Mem: {mem_used}/{mem_total} {mem_total_unit}]"
}

battery_level {
        format = "{status}: {percent}%"
}

clock {
        format = "{Local}"
        format_time = "%F %H:%M:%S"
}

py3status {
    stop_signal = 0
}
