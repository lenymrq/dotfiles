general {
        colors = true
        interval = 5
}

order += backlight
order += volume_status
order += bluetooth
order += networkmanager
order += vpn_status
order += sysdata
order += battery_level
order += clock

battery_level {
        format = "{icon}: {percent}%"
}

clock {
        format = "{Local}"
        format_time = "%F %H:%M:%S"
}
